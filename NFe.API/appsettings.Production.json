{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${PROD_DB_HOST};Database=${PROD_DB_DATABASE};Username=${PROD_DB_USERNAME};Password=${PROD_DB_PASSWORD}"
  },
  "AWS": {
    "Region": "${AWS_REGION}",
    "SecretsManager": {
      "CertificateSecretName": "${AWS_CERTIFICATE_SECRET_NAME}",
      "CertificatePasswordSecretName": "${AWS_CERTIFICATE_PASSWORD_SECRET_NAME}"
    }
  },
  "NFe": {
    "UseReal": true
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "NFe.API",
    "Audience": "NFe.Client", 
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RateLimiting": {
    "AuthPolicy": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    }
  },
  "Sefaz": {
    "Ambiente": 1,
    "UF": "${SEFAZ_UF}",
    "UrlProducao": "https://nfe.fazenda.sp.gov.br/ws/nfestatusservico4.asmx",
    "TimeoutMinutes": 10,
    "MaxRetries": 3,
    "Serie": 1,
    "CodigoMunicipio": "${SEFAZ_CODIGO_MUNICIPIO}",
    "CNPJ": "${SEFAZ_CNPJ}",
    "RazaoSocial": "${SEFAZ_RAZAO_SOCIAL}",
    "NomeFantasia": "${SEFAZ_NOME_FANTASIA}",
    "Endereco": "${SEFAZ_ENDERECO}",
    "Bairro": "${SEFAZ_BAIRRO}",
    "CEP": "${SEFAZ_CEP}",
    "InscricaoEstadual": "${SEFAZ_INSCRICAO_ESTADUAL}",
    "RegimeTributario": "${SEFAZ_REGIME_TRIBUTARIO}",
    "CertificateSecretName": "${AWS_CERTIFICATE_SECRET_NAME}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Amazon": "Warning",
        "NFe.Infrastructure.Services.CertificateService": "Information",
        "NFe": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
